<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="library.xbmc.libretro"
       name="Libretro Wrapper Library"
       version="1.0.0"
       provider-name="TeamXBMC">
  <requires>
    <import addon="xbmc.game" version="2.0.0"/>
  </requires>
  <extension point="xbmc.shared-library"
       library_android="libXBMC_libretro.so"
       library_linux="libXBMC_libretro.so"
       library_osx="libXBMC_libretro.so"
       library_windx="libXBMC_libretro.dll"
       library_wingl="libXBMC_libretro.dll">
	</extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
  </extension>
</addon>
